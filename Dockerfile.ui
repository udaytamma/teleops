FROM python:3.12-slim

WORKDIR /app

# Install minimal dependencies
COPY requirements-ui.txt .
RUN pip install --no-cache-dir -r requirements-ui.txt

# Copy only the UI code
COPY ui/ ui/

# Create non-root user
RUN useradd -m teleops && chown -R teleops:teleops /app
USER teleops

# Railway assigns PORT dynamically; default to 8501 for local use
EXPOSE 8501

# Run Streamlit with shell form to support $PORT variable expansion
CMD sh -c 'streamlit run ui/streamlit_app/app.py --server.port ${PORT:-8501} --server.headless true --server.address 0.0.0.0'
