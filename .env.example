# ===========================================
# TeleOps Configuration
# ===========================================

# Environment
ENVIRONMENT=local
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database
DATABASE_URL=sqlite:///./teleops.db

# LLM Provider: "gemini" | "local_telellm" | "hosted_telellm"
LLM_PROVIDER=gemini
LLM_MODEL=gemini-2.0-flash

# Gemini API (required if LLM_PROVIDER=gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_TIMEOUT_SECONDS=120

# Local TeleLLM (if LLM_PROVIDER=local_telellm)
# LLM_BASE_URL=http://localhost:8001/v1
# LLM_TIMEOUT_SECONDS=60
# LLM_API_KEY=optional-local-api-key

# RAG Configuration
RAG_CORPUS_DIR=./docs/rag_corpus
RAG_INDEX_DIR=./storage/rag_index
RAG_TOP_K=6

# API Security (optional)
# API_TOKEN=your-secure-token-here
# ADMIN_TOKEN=your-admin-token-here
# METRICS_TOKEN=your-metrics-token-here
# REQUIRE_TENANT_ID=false
# TELEOPS_TENANT_ID=demo-tenant

# Audit Log
# AUDIT_LOG_PATH=./storage/audit_log.jsonl
# AUDIT_LOG_MAX_BYTES=5000000
# AUDIT_LOG_BACKUP_COUNT=3

# CORS Origins (comma-separated for env var, or JSON array)
# CORS_ORIGINS=["http://localhost:8501","http://localhost:3000"]

# Integration Paths
INTEGRATIONS_FIXTURES_DIR=./docs/integrations/fixtures
INTEGRATIONS_LOG_PATH=./storage/integration_events.jsonl
# INTEGRATIONS_LOG_MAX_BYTES=5000000
# INTEGRATIONS_LOG_BACKUP_COUNT=3
TEST_RESULTS_PATH=./storage/test_results.json
EVALUATION_RESULTS_PATH=./storage/evaluation_results.json
